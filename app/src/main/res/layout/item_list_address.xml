<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rv_address_list_marginTop"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/rv_address_list_paddingStartEnd"
    android:paddingEnd="@dimen/rv_address_list_paddingStartEnd"
    android:paddingTop="@dimen/rv_address_list_paddingTopBottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.example.msikayaalimi.utils.MYATextViewBold
            android:id="@+id/tv_address_full"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/et_textSize"
            tools:text="Pat Mithi"/>

        <com.example.msikayaalimi.utils.MYATextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_filled"
            android:paddingStart="@dimen/address_rv_textPaddongStartEnd"
            android:paddingTop="@dimen/rv_address_text_paddingTopBottom"
            android:paddingEnd="@dimen/address_rv_textPaddongStartEnd"
            android:paddingBottom="@dimen/rv_address_text_paddingTopBottom"
            android:textColor="@color/white"
            android:text="Home" />


    </LinearLayout>
    <com.example.msikayaalimi.utils.MYATextView
        android:id="@+id/tv_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rv_address_details_marginTop"
        android:textSize="@dimen/label_text_view_textSize"
        android:textColor="@color/black"
        android:text="BOX 30497"/>

    <com.example.msikayaalimi.utils.MYATextView
        android:id="@+id/tv_address_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rv_address_details_marginTop"
        android:textColor="@color/black"
        android:text="+265 989830030"/>

</LinearLayout>